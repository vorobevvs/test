<Window x:Class="BezGranits.AddEditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BezGranits"
        mc:Ignorable="d"
        Title="AddEditEmployeeWindow" Height="450" Width="400" x:Name="Add_EditEmployee" Closed="Add_EditEmployee_Closed" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Background="LightCyan">
            <Label Content="ФИО" FontSize="20"/>
            <TextBox x:Name="txtFullName" Text="{Binding FName}" Margin="5"/>
            <Label Content="Дата рождения" FontSize="20"/>
            <DatePicker x:Name="dpBirth" SelectedDate="{Binding DateOfBirth}" Margin="5"/>
            <Label Content="Пол" FontSize="20"/>
            <ComboBox x:Name="cmbSex" Text="{Binding Sex}" Margin="5" IsEditable="False">
                <ComboBoxItem Content="М"/>
                <ComboBoxItem Content="Ж"/>
            </ComboBox>
            <!--<Label Content="Паспорт"/>
            <TextBox x:Name="txtPassport" Text="{Binding Passport}"/>-->
            <Button x:Name="btnSave" Click="btnSave_Click" Content="Сохранить" Width="105" Background="LightGreen" FontSize="20" FontWeight="Medium"/>
        </StackPanel>
    </Grid>
</Window>
